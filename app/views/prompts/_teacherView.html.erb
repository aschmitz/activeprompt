<script type="text/javascript">
  var haveHandleSize = false,
      havePromptImage = false,
      halfHandleW, halfHandleH, promptImage;
  
  $(function() {
    promptImage = $('#prompt_image');
    havePromptImage = true;
  });
  
  responses.on('child_added', function(snapshot) {
    var ref = snapshot.ref();
    
    jQuery('<img/>', {
      id: ref.name(),
      src: "/assets/red_dot.png",
      style: "opacity: 0.7; filter:alpha(opacity=70); z-index: 1; position: absolute",
      text: snapshot.val().top + ' ' + snapshot.val().left,
    }).appendTo("#prompt_image_container");
    
    ref.on('value', function(snapshot) {
      var response = $("#" + snapshot.ref().name());
      
      if (!!snapshot.val() && havePromptImage) {
        response.text(snapshot.val().top + ' ' + snapshot.val().left);
        
        if (!haveHandleSize) {
          halfHandleW = response.width() / 2;
          halfHandleH = response.height() / 2;
          haveHandleSize = true;
        }
        
        response.css("left", Math.round((snapshot.val().left * promptImage.width()) - halfHandleW) + "px");
        response.css("top", Math.round((snapshot.val().top * promptImage.height()) - halfHandleH) + "px");
      } else {
        response.remove();
      }
    });
  });
</script>